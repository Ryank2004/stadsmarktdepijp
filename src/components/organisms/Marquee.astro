---
import { Image } from "astro:assets";
import landmarkt from "@images/landmarkt.webp";
---
<section class="marquees">
<div class="marquee-text-wrapper">
    <div class="marquee-text">
        <h2>Uit de buurt, voor de buurt! - </h2>
    </div>
</div>

<div class="marquee-image-wrapper">
    <div class="marquee-image">
        <div class="image-group">
            <Image
                src={landmarkt}
                alt="Slider Image 1"
                class="image"
                width={800}
                height={600}
                loading="eager"
            />
            <Image
                src={landmarkt}
                alt="Slider Image 1"
                class="image"
                width={800}
                height={600}
                loading="eager"
            />
            <Image
                src={landmarkt}
                alt="Slider Image 1"
                class="image"
                width={800}
                height={600}
                loading="eager"
            />
            <Image
                src={landmarkt}
                alt="Slider Image 1"
                class="image"
                width={800}
                height={600}
                loading="eager"
            />
            <Image
                src={landmarkt}
                alt="Slider Image 1"
                class="image"
                width={800}
                height={600}
                loading="eager"
            />
            <Image
                src={landmarkt}
                alt="Slider Image 1"
                class="image"
                width={800}
                height={600}
                loading="eager"
            />
        </div>
    </div>
</div>
</section>

<style>
    .marquees {
        width: 100%;
        overflow: hidden;
    }

    .marquee-text-wrapper {
        white-space: nowrap;
        padding-top: 20vh;
    }

    .marquee-text {
        display: inline-block;
        padding-left: 2vw;
    }

    .marquee-image-wrapper {
        white-space: nowrap;
        padding-top: 6vh;
        padding-bottom: 20vh;
    }

    .marquee-image {
        display: inline-block;
    }

    .marquee-text h2 {
        text-wrap: nowrap;
        font-size: 22vw;
    }

    .image-group {
        gap: 5vw;
        padding-right: 5vw;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .image-group .image {
        width: 40vw;
        height: auto;
        border-radius: var(--border-radius-sm);
    }

    .image-group .image:nth-of-type(even) {
        aspect-ratio: 1 / 1;
        object-fit: cover;
    }

    .image-group .image:nth-of-type(odd) {
        aspect-ratio: 1 / 1.3;
        object-fit: cover;
    }

    @media screen and (min-width: 687px) {
        .sliders {
            margin: 15vh 0;
        }

        .slider {
            margin: 70px auto;
        }

        .image-group {
            gap: 3vw;
            padding-right: 3vw;
        }

        .image-group .image {
            width: 25vw;
        }

        .marquee-text h2 {
            font-size: clamp(64px, 8vw + 1rem, 8rem);
        }
    }

    @media screen and (min-width: 1024px) {
        .slider {
            margin: 100px auto;
        }

        .image-group .image {
            width: 20vw;
            border-radius: var(--border-radius-md);
        }

        .text-group {
            padding-right: 8rem;
        }

        .image-group {
            gap: 2vw;
            padding-right: 2vw;
        }
    }
</style>

<script src="/src/scripts/marquee.js"></script>
