<div class="primary-nav">
    <div class="container">
        <div class="row">
            <ul class="mobile-menu">
                <li class="link hamburger">
                    <div
                        class="link-click link-hover"
                        data-navigation-toggle="toggle"
                    >
                        <div class="link-content">
                            <div class="stripes">
                                <div class="stripe"></div>
                                <div class="stripe"></div>
                                <div class="stripe"></div>
                                <div class="stripe"></div>
                            </div>
                            <div class="link-text">
                                <span class="label">Menu</span>
                                <span class="duplicate">Menu</span>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>

            <Button />
        </div>
    </div>
</div>

<style>
    .secondairy-nav {
        position: absolute;
        width: 100%;
        z-index: 1;
        background-color: var(--color-dark);
    }

    .secondairy-nav .row {
        display: flex;
        width: 100%;
        position: relative;
        justify-content: space-between;
        align-items: center;
        height: 1.9em;
        margin-bottom: 30px;
    }

    .secondairy-nav ul {
        display: flex;
        flex-direction: row;
    }

    .s-icon .s-icon-content .facebook i {
        height: 85%;
        width: 85%;
    }

    .secondairy-nav small {
        color: var(--color-light);
        letter-spacing: 0.5px;
        font-weight: 300;
    }

    .primary-nav {
        position: absolute;
        background-color: var(--color-light);
        pointer-events: all;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 2;
        transform: translateY(1.9em);
        border-radius: 12vw;
        transition: all var(--animation-bounce);
    }

    .mobile-menu {
        display: flex;
        flex-direction: row;
    }

    .hamburger {
        color: var(--color-dark);
    }

    .primary-nav .link.hamburger .stripes {
        width: 1em;
        height: 1em;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 0.5em;
        gap: 2px;
        flex-direction: column;
    }

    .primary-nav .link.hamburger .stripes .stripe {
        width: 100%;
        display: block;
        height: 2px;
        background-color: var(--color-dark);
    }
</style>
