            <div class="text-link" data-link-status="not-active">
                <a class="link-click" href="/" aria-label="Contact">
                    <div class="link-content">
                        <div class="link-text">
                            <span class="label">Contact</span>
                            <span class="duplicate">Contact</span>
                        </div>
                    </div>
