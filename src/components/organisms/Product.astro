---
import { Image } from "astro:assets";
import tomasu from "@images/tomasu.webp";
---

<section class="product-section">
    <h2>Nu in de spotlight!</h2>
    <div class="image-section">
        <div class="image-container">
            <Image
                src={tomasu}
                alt="Landmarkt"
                class="section-image"
                width={800}
                height={600}
            />
        </div>
        <div class="content">
            <h3 class="title">Chili Sojasaus</h3>
            <h4 class="subtitle">Van Tomasu</h4>
            <p class="text">
                Elke week brengen lokale boeren en producenten hun verse waar
                naar de markt. Van knapperige groenten tot ambachtelijk gebakken
                brood, alles komt rechtstreeks uit de buurt. Ontdek de smaak van
                seizoensproducten en ondersteun tegelijkertijd onze lokale
                gemeenschap.
            </p>
            <p class="additional-info">Nu verkrijgbaar in onze winkel!</p>
        </div>
    </div>
</section>

<style>
    .product-section {
        margin: 0 auto;
        background-color: var(--color-dark);
        border-radius: var(--border-radius-md);
    }

    .image-section {
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 2rem;
        padding: 0 var(--container-padding-sm) 4rem;
    }

    .product-section h2 {
        text-align: center;
        color: var(--color-light);
        padding: 24vw 0 4rem;
    }

    .image-container {
        position: relative;
        width: 100%;
        overflow: hidden;
        border-radius: var(--border-radius-sm, 8px);
    }

    .section-image {
        width: 100%;
        height: auto;
        border-radius: var(--border-radius-sm, 8px);
        object-fit: cover;
        aspect-ratio: 4 / 3;
        transform: scale(1.10); /* Start iets ingezoomd */
    }

    .decorative-svg {
        position: absolute;
        top: -90px;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: auto;
        color: var(--color-primary, #4caf50);
        pointer-events: none;
    }

    .content {
        display: flex;
        flex-direction: column;
    }

    .title {
        color: var(--color-light);
    }

    .subtitle {
        color: var(--color-light);
        padding-bottom: 1rem;
    }

    .text {
        color: var(--color-light);
    }

    .additional-info {
        color: var(--color-light);
        padding-top: 1rem;
        font-weight: bold;
        display: inline-block;
        width: fit-content;
        border-bottom: 1px solid var(--color-light);
    }

    @media screen and (min-width: 568px) {
        .image-section {
            border-radius: var(--border-radius-md, 12px);
            padding: 0 var(--container-padding-md) 6rem;
        }
        
        .image-container {
            border-radius: var(--border-radius-md, 12px);
        }
        
        .section-image {
            border-radius: var(--border-radius-md, 12px);
        }
    }
    @media screen and (min-width: 768px) {
        .product-section h2 {
            text-align: center;
            padding: 14vw 0 8rem var(--container-padding-sm);
        }

        .image-section {
            flex-direction: row;
            gap: 3rem;
            padding-bottom: 12rem;
            padding: 0 var(--container-padding-lg) 8rem;
        }

        .image-container {
            flex: 1;
            min-width: 0;
            border-radius: var(--border-radius-md, 12px);
        }

        .content {
            flex: 1;
            min-width: 0;
        }

        .subtitle {
            padding-bottom: 1.5rem;
        }

        .section-image {
            border-radius: var(--border-radius-md, 12px);
            aspect-ratio: 4 / 5;
        }
    }

    @media screen and (min-width: 1024px) {
        .product-section {
            gap: 4rem;
            border-radius: var(--border-radius-lg);
        }

        .product-section h2 {
            text-align: left;
            padding: 14vw 0 12rem var(--container-padding-sm);
        }

        .section-image {
            border-radius: var(--border-radius-md, 12px);
        }

        .subtitle {
            padding-bottom: 2rem;
        }

        .additional-info {
            padding-top: 1.5rem;
        }
    }

    @media screen and (min-width: 1224px) {
        .section-image {
            aspect-ratio: 5 / 4;
        }
    }
</style>

<script src="/src/scripts/product.js"></script>