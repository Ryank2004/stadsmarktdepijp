---
import BackgroundTexture from "@atoms/BackgroundTexture.astro";
import CustomCursor from "@molecules/CustomCursor.astro";
import Footer from "@organisms/Footer.astro";
import Navigation from "@organisms/Navigation.astro";
import { Image } from "astro:assets";
import Logo from "@images/logo.svg";

export interface Props {
    title?: string;
    description?: string;
    image?: string;
    canonical?: string;
}

const {
    title = "Verse Bio Supermarkt Amsterdam De Pijp",
    description = "Biologische supermarkt in Amsterdam met lokale groenten, vis, vlees en kaas. Kwaliteit en ambacht op de eerste plaats.",
    image = "/images/winkel-zijkant.webp",
    canonical
} = Astro.props;

const siteUrl = 'https://stadsmarktdepijp.nl';
const fullTitle = `${title} | Stadsmarkt De Pijp`;
const canonicalURL = canonical || new URL(Astro.url.pathname, siteUrl).href;
const imageUrl = new URL(image, siteUrl).href;
---

<html lang="nl">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <!-- Primary Meta Tags -->
        <title>{fullTitle}</title>
        <meta name="title" content={fullTitle} />
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={fullTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={imageUrl} />
        <meta property="og:locale" content="nl_NL" />
        <meta property="og:site_name" content="Stadsmarkt De Pijp" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={fullTitle} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={imageUrl} />

        <!-- Additional SEO -->
        <meta name="robots" content="index, follow" />
        <meta name="author" content="Stadsmarkt De Pijp" />
        <meta name="language" content="Dutch" />

        <!-- Preconnect for Performance -->
        <link rel="preconnect" href="https://cdn.contentful.com" />
        <link rel="preconnect" href="https://pub-1a25cf202b82430c9160c7cbb02d619e.r2.dev" />

        <link rel="stylesheet" href="/css/global.css" />
        <!-- <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
        /> -->
        <link
            rel="preload"
            href="/fonts/work-sans.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />
        <link
            rel="preload"
            href="/fonts/sale-italic.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />
        <link
            rel="preload"
            href="/fonts/sale-italic-bold.ttf"
            as="font"
            type="font/ttf"
            crossorigin
        />

        <!-- Structured Data (JSON-LD) -->
        <script type="application/ld+json" is:inline>
        {
            "@context": "https://schema.org",
            "@type": "LocalBusiness",
            "name": "Stadsmarkt De Pijp",
            "image": "https://stadsmarktdepijp.nl/images/logo.svg",
            "description": "Biologische supermarkt in Amsterdam met lokale groenten, vis, vlees en kaas. Kwaliteit en ambacht op de eerste plaats.",
            "address": {
                "@type": "PostalAddress",
                "streetAddress": "Van Woustraat 103",
                "addressLocality": "Amsterdam",
                "addressRegion": "Noord-Holland",
                "postalCode": "1074 AH",
                "addressCountry": "NL"
            },
            "geo": {
                "@type": "GeoCoordinates",
                "latitude": "52.3519",
                "longitude": "4.8933"
            },
            "telephone": "+31208944276",
            "email": "mail@stadsmarktdepijp.nl",
            "url": "https://stadsmarktdepijp.nl",
            "priceRange": "€€",
            "openingHoursSpecification": [
                {
                    "@type": "OpeningHoursSpecification",
                    "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
                    "opens": "09:00",
                    "closes": "20:00"
                },
                {
                    "@type": "OpeningHoursSpecification",
                    "dayOfWeek": "Sunday",
                    "opens": "12:00",
                    "closes": "18:00"
                }
            ],
            "sameAs": [
                "https://www.instagram.com/stadsmarktdepijp"
            ]
        }
        </script>
    </head>
    <body>
        <div id="splash-screen">
            <div class="splash-content">
                <Image
                    src={Logo}
                    alt="Stadsmarkt Logo"
                    width="150"
                    height="150"
                />
            </div>
        </div>
        <!-- <CustomCursor /> -->
        <BackgroundTexture />
        <Navigation />
        <slot />
        <Footer />
    </body>

    <style>
    /* Full screen overlay */
    #splash-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: var(--color-light);
            z-index: 9000;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .splash-content img {
            animation: pulse 1s ease infinite;
        }

        .animate-out {
            animation: fade-out 0.5s ease-out forwards;
            animation-delay: 0s; /* AANGEPAST: Was 1.5s. Nu direct starten als 'load' klaar is */
            pointer-events: none;
        }

        @keyframes fade-out {
            from {
                opacity: 1;
                transform: scale(1);
            }
            to {
                opacity: 0;
                transform: scale(1.1);
                visibility: hidden;
            }
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
</html>
<script>
    import "../scripts/smooth-scroll";
</script>

<script is:inline>
    const splash = document.getElementById("splash-screen");
    const MINIMUM_LOADING_TIME = 800; // Pas aan naar wens (in ms), bijv 800 of 1000
    const startTime = Date.now();

    function hideSplash() {
        splash.classList.add("animate-out");
    }

    // 1. Check: Komen we van een interne klik?
    if (sessionStorage.getItem("is-internal-nav") === "true") {
        // Direct weg, geen vertraging, geen animatie
        splash.style.display = "none";
        sessionStorage.removeItem("is-internal-nav");
    } else {
        // 2. NEE: Dit is een refresh of eerste bezoek.

        // Functie die berekent hoe lang we nog moeten wachten
        const finishLoading = () => {
            const elapsedTime = Date.now() - startTime;
            const remainingTime = MINIMUM_LOADING_TIME - elapsedTime;
            
            // Als we sneller waren dan de minimale tijd, wachten we de restjes
            // Als we trager waren, is de wachttijd negatief (dus 0, direct uitvoeren)
            setTimeout(hideSplash, Math.max(0, remainingTime));
        };

        // Wacht tot de pagina ECHT klaar is
        if (document.readyState === "complete") {
            finishLoading();
        } else {
            window.addEventListener('load', finishLoading);
        }
    }

    // 3. Link logica (ongewijzigd)
    document.addEventListener("click", (e) => {
        const link = e.target.closest("a");
        if (link && link.href.startsWith(window.location.origin)) {
            if (link.target !== "_blank" && !link.href.includes("mailto:")) {
                 sessionStorage.setItem("is-internal-nav", "true");
            }
        }
    });
</script>
